<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro">  <!-- Special CSS from Google -->
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />  <!-- Bootstrap CSS -->
    <script src="~/lib/jquery/jquery.js"></script>  <!-- JQuery -->
    <script src="~/lib/bootstrap/js/bootstrap.js"></script> <!-- JS in Boorstrap -->
    <link href="~/content/site.css" rel="stylesheet" /> <!-- Our own CSS -->
    <title>@ViewBag.Title</title>
</head>
<body>

    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Candy" asp-action="List">All Candy</a></li>
                    @await Component.InvokeAsync("ShoppingCartSummary")
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">
                    <img src="~/Images/candyshoplogo.png" />
                </p>
            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
